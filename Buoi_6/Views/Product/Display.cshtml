@model Buoi_6.Models.Product

<div class="card p-4">
    <div class="row g-4 align-items-center">
        <div class="col-md-6 text-center">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/no-image.png")" 
                 alt="@Model.Name" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;" />
        </div>
        <div class="col-md-6">
            <h2 class="mb-3 fw-bold">@Model.Name</h2>
            <h4 class="text-primary fw-bold mb-4">@Model.Price.ToString("C0")</h4>
            <div class="mb-4" style="white-space: pre-wrap; line-height: 1.6; font-size: 1.1rem;">
                @Model.Description
            </div>
            <p class="mb-4"><strong>Danh mục:</strong> @(!string.IsNullOrEmpty(Model.Category?.Name) ? Model.Category.Name : "Không có")</p>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>