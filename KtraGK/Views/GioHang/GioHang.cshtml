@model List<HocPhan>
@{
    ViewData["Title"] = "Đăng Kí Học Phần";
    int tongTinChi = Model.Sum(hp => hp.SoTinChi);
}

<h2 class="text-center mb-4">🧾 Đăng Kí Học Phần</h2>

<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>Mã HP</th>
            <th>Tên Học Phần</th>
            <th>Số Tín Chỉ</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hp in Model)
        {
            <tr>
                <td>@hp.MaHP</td>
                <td>@hp.TenHP</td>
                <td>@hp.SoTinChi</td>
                <td>
                    <a asp-action="XoaKhoiGio" asp-route-maHP="@hp.MaHP" class="text-danger">❌ Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3 text-end">
    <p class="text-danger fw-bold">Số học phần: @Model.Count</p>
    <p class="text-danger fw-bold">Tổng số tín chỉ: @tongTinChi</p>
</div>

<div class="mt-4 text-center">
    <a asp-action="XoaTatCa" class="btn btn-outline-danger me-3">🗑️ Xoá Đăng Ký</a>
    <a asp-action="DatHang" class="btn btn-primary">💾 Lưu Đăng Ký</a>
</div>
