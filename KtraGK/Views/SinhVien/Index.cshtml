@model IEnumerable<SinhVien>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<h2 class="text-center">📋 Danh sách Sinh viên</h2>

<p class="text-end">
    <a asp-action="Create" class="btn btn-success">➕ Thêm sinh viên</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Mã SV</th>
            <th>Họ Tên</th>
            <th>Giới Tính</th>
            <th>Ngày Sinh</th>
            <th>Ngành</th>
            <th>Hình</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSV</td>
                <td>@item.HoTen</td>
                <td>@item.GioiTinh</td>
                <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                <td>@item.NganhHoc?.TenNganh</td>
                <td><img src="@item.Hinh" width="70" class="rounded" /></td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaSV" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaSV" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaSV" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
