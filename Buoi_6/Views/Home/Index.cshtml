@model IEnumerable<Buoi_6.Models.Product>

<div class="container my-5">
    <h1 class="text-center mb-5 fw-bold text-dark" style="font-size: 2.5rem;">Sản phẩm nổi bật</h1>
    
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card border-0 shadow-lg rounded-3 overflow-hidden h-100 transition-transform duration-300 hover:scale-105 w-100">
                    <div class="position-relative">
                        <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/images/no-image.png")" 
                             class="card-img-top" 
                             alt="@product.Name" 
                             style="height: 250px; object-fit: cover; transition: transform 0.3s;" />
                        <div class="position-absolute top-0 end-0 p-2">
                            <span class="badge bg-success">New</span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-semibold text-dark mb-2">@product.Name</h5>
                        <p class="card-text text-muted small flex-grow-1" style="max-height: 60px; overflow: hidden;">@product.Description</p>
                        <p class="card-text fw-bold text-danger mb-3" style="font-size: 1.2rem;">@product.Price.ToString("C0")</p>
                        <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" 
                           class="btn btn-primary w-100 rounded-pill mt-auto py-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
