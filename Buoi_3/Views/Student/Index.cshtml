@model BT3.Models.Student
@{
    ViewData["Title"] = "Đăng ký chuyên ngành";
    var majors = new List<string> { "CNPM", "HTTT", "ANM", "TTNT", "MMT" };
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MSSV" class="control-label">Mã số sinh viên</label>
                    <input asp-for="MSSV" class="form-control" placeholder="Nhập MSSV" />
                    <span asp-validation-for="MSSV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoTen" class="control-label">Họ và tên</label>
                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiemTB" class="control-label">Điểm trung bình</label>
                    <input asp-for="DiemTB" class="form-control" type="number" step="0.1" placeholder="Nhập điểm TB" />
                    <span asp-validation-for="DiemTB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChuyenNganh" class="control-label">Chuyên ngành</label>
                    <select asp-for="ChuyenNganh" class="form-control">
                        <option value="">-- Chọn chuyên ngành --</option>
                        @foreach (var major in majors)
                        {
                            <option value="@major">@major</option>
                        }
                    </select>
                    <span asp-validation-for="ChuyenNganh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}