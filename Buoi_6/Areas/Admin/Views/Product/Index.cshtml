@model IEnumerable<Buoi_6.Models.Product>

<div class="mb-4">
    <h2 class="fw-bold text-dark">Quản lý sản phẩm</h2>
    <a asp-action="Add" class="btn btn-primary mt-2">Thêm sản phẩm mới</a>
</div>

<div class="row g-4">
    @foreach (var product in Model)
    {
        <div class="col-md-4 col-sm-6">
            <div class="card h-100">
                <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/images/no-image.png")" 
                     class="card-img-top" style="object-fit: cover; height: 200px;" alt="@product.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@product.Name</h5>
                    <p class="card-text text-primary fw-bold mb-2">@String.Format("{0:N0} $", product.Price)</p>
                    <p class="card-text flex-grow-1">
                        @(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description ?? "")
                    </p>
                    <p class="card-text"><small class="text-muted">Danh mục: @(product.Category?.Name ?? "Không có")</small></p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-sm btn-info">Xem</a>
                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>