@model Book
@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Image" class="img-fluid" alt="@Model.Title" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>Tác giả:</strong> @Model.Author</p>
            <p><strong>Thể loại:</strong> @Model.Category.CategoryName</p>
            <p><strong>Giá:</strong> <span class="text-decoration-line-through text-muted">90.000 VNĐ</span> <span class="text-danger fw-bold">@Model.Price.ToString("N0") VNĐ</span> (-23%)</p>
            <p><strong>Mô tả:</strong> @Model.Description</p>
            <button class="btn btn-outline-primary btn-lg me-2">Thêm vào giỏ hàng</button>
            <button class="btn btn-danger btn-lg">Mua ngay</button>
        </div>
    </div>
</div>